/* Dropdown list items - IMPROVED VISIBILITY */
QgsMapLayerComboBox QAbstractItemView {
    border: 2px solid #007bff;
    border-radius: 4px;
    background-color: white;
    selection-background-color: #007bff;
    selection-color: white;
    font-size: 10px;
    font-weight: 500;
    padding: 2px;
    color: #212529;
}

QgsMapLayerComboBox QAbstractItemView::item {
    padding: 6px 8px;
    border: none;
    color: #212529;
    background-color: transparent;
}

QgsMapLayerComboBox QAbstractItemView::item:hover {
    background-color: #e9ecef;
    color: #212529;
}

QgsMapLayerComboBox QAbstractItemView::item:selected {
    background-color: #007bff;
    color: white;
}

/* Regular ComboBox - Size S */
QComboBox {
    border: 1px solid #ced4da;
    border-radius: 3px;
    padding: 3px 6px;
    background-color: white;
    font-size: 10px;
    font-weight: 500;
    min-height: 18px;
    color: #212529;
}

QComboBox:hover {
    border-color: #007bff;
    background-color: #f8f9fa;
}

QComboBox:focus {
    border-color: #007bff;
}

QComboBox::drop-down {
    border: none;
    width: 18px;
    background-color: #e9ecef;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

QComboBox::drop-down:hover {
    background-color: #007bff;
}

QComboBox::down-arrow {
    image: none;
    width: 8px;
    height: 8px;
    border: 2px solid #495057;
    border-left: none;
    border-top: none;
    transform: rotate(45deg);
    margin: 2px;
}

QComboBox::drop-down:hover QComboBox::down-arrow {
    border-color: white;
}

QComboBox QAbstractItemView {
    border: 2px solid #007bff;
    border-radius: 4px;
    background-color: white;
    selection-background-color: #007bff;
    selection-color: white;
    font-size: 10px;
    color: #212529;
}

QComboBox QAbstractItemView::item {
    padding: 6px 8px;
    color: #212529;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #e9ecef;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #007bff;
    color: white;
}

/* Checkboxes - IMPROVED */
QCheckBox {
    font-size: 10px;
    font-weight: 500;
    spacing: 6px;
    color: #212529;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 2px solid #6c757d;
    border-radius: 3px;
    background-color: white;
}

QCheckBox::indicator:hover {
    border-color: #007bff;
    background-color: #f8f9fa;
}

QCheckBox::indicator:checked {
    background-color: #007bff;
    border-color: #007bff;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iMTIiIHZpZXdCb3g9IjAgMCAxMiAxMiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTEwIDNMNC41IDguNUwyIDYiIHN0cm9rZT0id2hpdGUiIHN0cm9rZS13aWR0aD0iMiIgc3Ryb2tlLWxpbmVjYXA9InJvdW5kIiBzdHJva2UtbGluZWpvaW49InJvdW5kIi8+Cjwvc3ZnPgo=);
}

/* Tab Widget - IMPROVED */
QTabWidget::pane {
    border: 2px solid #dee2e6;
    border-radius: 4px;
    background-color: white;
}

QTabWidget::tab-bar {
    alignment: center;
}

QTabBar::tab {
    background-color: #e9ecef;
    border: 1px solid #dee2e6;
    padding: 6px 12px;
    margin: 1px;
    border-radius: 4px 4px 0 0;
    font-size: 9px;
    font-weight: 500;
    min-width: 80px;
    color: #495057;
}

QTabBar::tab:selected {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
    font-weight: bold;
}

QTabBar::tab:hover:!selected {
    background-color: #f8f9fa;
    border-color: #007bff;
}

/* Input Controls - IMPROVED */
QSpinBox, QDoubleSpinBox {
    border: 2px solid #ced4da;
    border-radius: 4px;
    padding: 4px 6px;
    background-color: white;
    font-size: 10px;
    font-weight: 500;
    min-height: 20px;
    color: #212529;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    border-color: #007bff;
    background-color: #f8f9fa;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
}

/* Labels */
QLabel {
    color: #495057;
    font-size: 9pt;
}

/* Buttons */
QPushButton {
    background-color: #6c757d;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 6px 12px;
    font-size: 9pt;
    font-weight: bold;
    min-height: 20px;
}

QPushButton:hover {
    background-color: #5a6268;
}

QPushButton:pressed {
    background-color: #545b62;
}

QPushButton#calculateButton {
    background-color: #28a745 !important;
    color: white !important;
    font-weight: bold !important;
    font-size: 10pt !important;
}

QPushButton#calculateButton:hover {
    background-color: #218838 !important;
}

QPushButton#calculateButton:pressed {
    background-color: #1e7e34 !important;
}

QPushButton#directionButton {
    background-color: #17a2b8;
    color: white;
    font-size: 8pt;
}

QPushButton#directionButton:hover {
    background-color: #138496;
}

QPushButton#directionButton:checked {
    background-color: #007bff;
}

QPushButton#cancelButton {
    background-color: #dc3545;
    color: white;
}

QPushButton#cancelButton:hover {
    background-color: #c82333;
}

/* Form Layouts */
QFormLayout {
    spacing: 3px;
}

/* Vertical Layouts */
QVBoxLayout {
    spacing: 4px;
}

/* Horizontal Layouts */
QHBoxLayout {
    spacing: 4px;
}
